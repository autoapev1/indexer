  // api config
  "api": {
    // host address
    "host": "localhost",

    // host port
    "port": 8080,

    // 90 days
    "authDefaultExpirary": 7776000,

    // uuid | hex16 | hex32 | hex64 | hex128 | hex256 | jwt
    "authKeyType": "hex64",

    // master key used for private API methods
    "authMasterKey": "my-master-key",

    // sql | noauth | memory
    "authProvider": "sql",

    // number of requests per minute
    "rateLimitRequests": 500,

    // ip | key
    "rateLimitStrategy": "ip"
  },

  // sync config
  "sync": {
    "pairs": {
      "batchConcurrency": 2,
      "batchSize": 10,
      "blockRange": 200
    },
    "tokens": {
      "batchConcurrency": 2,
      "batchSize": 10
    }
  },
  // storage config
  "storage": {
    // currently only postgres is supported
    "postgres": {
      "host": "localhost",
      "password": "postgres",
      "port": "5432",
      "sslmode": "disable",
      "user": "postgres"
    }
  }
}